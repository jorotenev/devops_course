{% extends "bootstrap/base.html" %}
{% block title %}Stores{% endblock %}

{% block content %}
<style>
/* CSS used here will be applied after bootstrap.css */

body {
 background: url('/static/bg.jpg') no-repeat center center fixed;
 -webkit-background-size: cover;
 -moz-background-size: cover;
 -o-background-size: cover;
 background-size: cover;
}

.panel-default {
 opacity: 0.9;
 margin-top:30px;
}
.form-group.last {
 margin-bottom:0px;
}
</style>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                  <strong>Send a message</strong>
                </div>
                <div class="panel-body">
                    {% with messages = get_flashed_messages() %}
                          {% if messages %}
                      <div class="panel-text">
                            <div class="alert alert-success" role="alert">
                            {% for message in messages %}
                               {{ message }}
                            {% endfor %}
                            </div>
                            </div>
                          {% endif %}
                        {% endwith %}

                    <form class="form-horizontal" role="form" action="{{url_for('pages.index_stores')}}" method="POST">
                    <div class="form-group">
                        <label for="phonenumber" class="col-sm-3 control-label">
                            Phone</label>
                        <div class="col-sm-9">
                            <input type="phone" class="form-control" name="phonenumber" id="phonenumber" placeholder="+35988123456" required="True">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="msg" class="col-sm-3 control-label">
                            Message</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="msg" name="msg" placeholder="Type your message" required="True">
                        </div>
                    </div>

                    <div class="form-group last">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" value="submit" class="btn btn-success btn-sm">
                                Send</button>

                        </div>
                    </div>
                    </form>
                </div>
                <div class="panel-footer">
                    progressbg.net devops course 2019</a></div>
            </div>
        </div>
    </div>
</div>
{% endblock %}